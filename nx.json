{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "defaultBase": "main",
  "release": {
    "projects": ["*"],
    "versionPlans": true,
    "projectsRelationship": "independent",
    "version": {
      "generatorOptions": {
        "versionPrefix": ""
      },
      "git": {
        "commit": true,
        "tag": true,
        "push": true,
        "stageChanges": true
      }

    },
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      },
      "git": {
        "commit": true,
        "tag": true,
        "push": true,
        "stageChanges": true
      },
      "automaticFromRef": true
    }
  },
  "parallel": 1,
  "pluginsConfig": {
    "@nx/js": {
      "projectsAffectedByDependencyUpdates": "auto"
    }
  },
  "neverConnectToCloud": true
}
