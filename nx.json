{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "defaultBase": "main",
  "release": {
    "projects": ["*"],
    "versionPlans": true,
    "projectsRelationship": "independent",
    "version": {
      "generatorOptions": {
        "versionPrefix": ""
      }
    },
    "git": {
      "commit": false,
      "tag": false,
      "push": false,
      "stageChanges": false
    }
  },
  "parallel": 1,
  "pluginsConfig": {
    "@nx/js": {
      "projectsAffectedByDependencyUpdates": "auto"
    }
  },
  "neverConnectToCloud": true,
}
